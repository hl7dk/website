  <rest>
    <mode value="server"/>
    <security>
      <extension url="http://fhir-registry.smarthealthit.org/StructureDefinition/oauth-uris">
        <extension url="authorize">
          <valueUri value="https://gravitate-ips.gravitate.tcs.trifork.dev/oauth2/authorize"/>
        </extension>
        <extension url="token">
          <valueUri value="https://gravitate-ips.gravitate.tcs.trifork.dev/oauth2/token"/>
